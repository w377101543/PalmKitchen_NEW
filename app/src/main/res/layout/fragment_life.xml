<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/life_tablayout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="center"
        app:tabBackground="@drawable/shape_bg_tablayout"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/indicator"
        app:tabSelectedTextColor="@color/selected"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/unselected" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e9e9e9" />

    <android.support.v4.view.ViewPager
        android:id="@+id/life_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>