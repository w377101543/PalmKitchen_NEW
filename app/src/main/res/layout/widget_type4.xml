        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_widget_line"
        android:gravity="center">

        <TextView
            android:id="@+id/widget4_title"
            style="@style/ST16_1"
            android:layout_width="wrap_content"
            android:layout_height="46.0dip"
            android:drawablePadding="21.0dip"
            android:drawableRight="@mipmap/ic_scene_more"
            android:gravity="center"
            android:maxLines="1"
            android:text="推荐达人" />
    </LinearLayout>

    <View
        android:id="@+id/id_widget_talent_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_line_size"
        android:layout_below="@id/id_widget_talent_more"
        android:background="@color/main_color_line" />

    <LinearLayout
        android:id="@+id/id_talent_layout1"
