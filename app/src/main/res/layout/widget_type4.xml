                android:layout_width="70.0dip"
                android:layout_height="70.0dip"
                android:layout_gravity="center"
                app:border_width="0dp"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="23.0dip"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget4_title1"
                style="@style/ST14_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:id="@+id/widget4_desc1"
                style="@style/ST12_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:ellipsize="end"
                android:lineSpacingExtra="2.0dip"
                android:maxLines="2"
                android:text="" />

            <TextView
                android:id="@+id/widget4_follow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:textColor="#ff828282"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/id_widget_talent_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_line_size"
        android:layout_below="@id/id_talent_layout1"
        android:layout_marginLeft="100.0dip"
        android:layout_marginRight="17.0dip"
        android:background="@color/main_color_line" />

    <LinearLayout
        android:id="@+id/id_talent_layout2"
        android:layout_width="match_parent"
