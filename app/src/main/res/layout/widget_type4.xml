    <View
        android:id="@+id/id_widget_talent_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_line_size"
        android:layout_below="@id/id_talent_layout2"
        android:layout_marginLeft="100.0dip"
        android:layout_marginRight="17.0dip"
        android:background="@color/main_color_line" />

    <LinearLayout
        android:id="@+id/id_talent_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_widget_talent_line3"
        android:layout_marginBottom="7.0dip"
        android:layout_marginTop="7.0dip"
