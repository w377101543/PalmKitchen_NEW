<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/id_widget_line"
        android:layout_width="match_parent"
        android:layout_height="10.0dip"
        android:background="@color/color_divider"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15.0dip"
        android:paddingTop="15.0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/widget1_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget1_img1"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"/>

                <TextView
                    android:id="@+id/widget1_title1"
                    style="@style/T12_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget1_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget1_img2"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"/>

                <TextView
                    android:id="@+id/widget1_title2"
                    style="@style/T12_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget1_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget1_img3"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"/>

                <TextView
                    android:id="@+id/widget1_title3"
                    style="@style/T12_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget1_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget1_img4"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    />

                <TextView
                    android:id="@+id/widget1_title4"
                    style="@style/T12_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                     />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget1_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/widget1_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget1_img5"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip" />

                <TextView
                    android:id="@+id/widget1_title5"
                    style="@style/T12_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget1_btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget1_img6"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip" />

                <TextView
                    android:id="@+id/widget1_title6"
                    style="@style/T12_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget1_btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/widget1_img7"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip" />

                <TextView
                    android:id="@+id/widget1_title7"
                    style="@style/T12_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget1_btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/widget1_img8"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip" />

                <TextView
                    android:id="@+id/widget1_title8"
                    style="@style/T12_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>