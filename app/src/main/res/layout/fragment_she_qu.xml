<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/shequ_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <android.support.design.widget.TabLayout
            android:id="@+id/shequ_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:tabBackground="@drawable/shape_bg_tablayout"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/indicator"
            app:tabSelectedTextColor="@color/selected"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/unselected"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_activity"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/shequ_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shequ_layout"/>
    <RelativeLayout
        android:id="@+id/shequ_camera_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/bg_post_card_message"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/shequ_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:src="@drawable/btn_post_card_bg"/>
    </RelativeLayout>
</RelativeLayout>