<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_zxing" />

        <android.support.design.widget.TabLayout
            android:id="@+id/food_book_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/indicator"
            app:tabSelectedTextColor="@color/selected"
            app:tabTextColor="@color/unselected"
            app:tabBackground="@drawable/shape_bg_tablayout"
            app:tabTextAppearance="@style/TabLayoutTextStyle"/>

        <ImageView
            android:id="@+id/food_book_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_search_icon" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e9e9e9"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/food_book_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>