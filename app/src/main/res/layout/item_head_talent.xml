<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="80.0dip"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.gold.palm.palmkitchen_new.ui.CircleImageView
            android:id="@+id/talent_header"
            android:layout_width="64.0dip"
            android:layout_height="64.0dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_head_icon" />

        <TextView
            android:id="@+id/talent_name"
            style="@style/ST14_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="我是大人" />

        <TextView
            android:id="@+id/talent_follow_num"
            style="@style/ST12_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="粉丝:123456" />

        <TextView
            android:id="@+id/talent_attention_btn"
            android:layout_width="54.0dip"
            android:layout_height="20.0dip"
            android:layout_marginTop="3.0dip"
            android:background="@drawable/main_color_conner_bg"
            android:gravity="center"
            android:text="关注"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="3.2999878dip"
        android:layout_height="match_parent"
        android:background="@color/main_bg" />
</LinearLayout>